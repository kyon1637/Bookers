<% if user_signed_in? %>
<% if book.favorited_by?(current_user) %>
    <%= link_to book_favorites_path(book.id), method: :delete, remote: true do %>
    <i class="glyphicon glyphicon-heart" aria-hidden="true" style="color: red;"></i>
    <%= book.favorites.count %>
    <% end %>

<% else %>

    <%= link_to book_favorites_path(book.id), method: :post, remote: true do %>
    <i class="glyphicon glyphicon-heart" aria-hidden="true" style="color: gray;"></i>
    <%= book.favorites.count %>
    <% end %>
<% end %>
<% end %>