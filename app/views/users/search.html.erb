  <% if @user_or_book == "1"%>
<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
   <th></th>
    </tr>
  </thead>

  <tbody>
     <% @users.each do |user| %>
      <tr>
        <td>
          <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
          </td>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', user_path(user.id) %></td>
      </tr>
     <% end %>
  </tbody>
</table>
    <% elsif @user_or_book == "2" %>
<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>opinion</th>
      <th></th>
    </tr>
  </thead>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
          </td>
        <td><%= book.title %></td>
        <td><%= link_to 'Show', book_path(book.id) %></td>
      </tr>
     <% end %>
    <% end %>
  </tbody>
</table>