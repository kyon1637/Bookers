<div class="container">
  <div class="row">
    <div class="col-xs-3">
<h1>User info</h1>
 <%=  attachment_image_tag current_user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
      <tr>
      <th>name</th>
    <th><%= current_user.name %></th>
      </tr>
      <tr>
    <th>introduction</th>
    <th><%= current_user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <%= link_to edit_user_path(current_user), class: 'btn btn-default btn-block' do %>
  <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
  <% end %>
   <%= form_for(@book) do |f| %>
   <h1>New book</h1>
   <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book',class: 'btn btn-primary btn-block' %>

<% end %>
</div>
<div class ="col-xs-9">
<h1>Users</h1>

   <table class="table">
    <thead>
    <tr>
      <th>image</th>
      <th>name</th>
   <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
   <tr>
        <td>
          <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
          </td>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', user_path(user.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>
