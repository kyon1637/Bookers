<h2>User info</h2>
<div class="user-edit">
<%= form_for(@user) do |f| %>
<ul>
  <%= render 'layouts/error_messages', model: f.object %>
      </ul>
      <h4>Name</h4>
        <label class="control-label sr-only" for="inputEmail">Name</label>
        <%= f.text_field :name, autofocus: true, id:"inputEmail", placeholder:"名前"%>

        <h4>Image</h4>
         <label class="control-label sr-only" for="inputEmail">Image</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
        <h4>Introduction</h4>
        <label class="control-label sr-only" for="inputEmail">Introduction</label>
        <%= f.text_area :introduction %>
        <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
    <div class="form-group has-icon">
    <div class="user-edit-image">
    </div>
</div>
    <%= f.submit "Update User",　class: "btn btn-default" %>
<% end %>
</div>
<footer>
    <div class ="bottom">
      <p>CopyRight Infratop.inc</p>
    </div>
  </footer>