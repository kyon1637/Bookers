<div class="profile-container">
    <h3 class="profile-name"><%= @user.name %></h3>
    <%= image_tag('sample-author1.jpg', class: "img-circle pull-left profile-img", style: "width: 100px; height: 100px;") %>
　　 <% if @user.id == current_user.id %>
        <p><%= link_to "プロフィール編集", edit_user_path(@user), class: "pull-right" %></p>
    <% end %>
</div>
  <h1>投稿一覧</h1>
  <% @books.each do |book| %>
  <span><%= book.title %></span>
  <% end %>

<%= form_for(@book) do |f| %>
   <h1>New book</h1>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

<% end %>
