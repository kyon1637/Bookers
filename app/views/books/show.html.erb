<h1>Books</h1>
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
   <table>
    <tr>
    <thead>
  <th>Title</th>
   <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  	<h2>Book detail</h2>
  	<tbody>
   <tr>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
        <td><%= link_to 'Edit', edit_book_path(@book) %></td>
        <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  </tbody>
</table>

<%= form_for(@book) do |f| %>
   <h1>New book</h1>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

<% end %>