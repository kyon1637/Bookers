<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<div class="container">
  <div class="row">
  <div class="col-xs-3">
<h1>User info</h1>
 <%=  attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
      <tr>
      <th>name</th>
    <th><%= @user.name %></th>
      </tr>
      <tr>
    <th>introduction</th>
    <th><%= @user.introduction %></th>
      </tr>
       <tr>
    <th>follows</th>
    <th><%= link_to @user.followings.count,follows_user_path(@user) %></th>
      </tr>
      <tr>
        <th>followers</th>
        <th><%= link_to @user.followers.count,followers_user_path(@user) %></th>
      </tr>
    </tbody>
  </table>
  <%= link_to edit_user_path(current_user), class: 'btn btn-default btn-block' do %>
  <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
  <% end %>
<%= form_for(@booknew) do |f| %>
   <h1>New book</h1>
   <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book', class: 'btn btn-primary btn-block' %>

<% end %>
</div>
<div class ="col-xs-9">
<h1>Book detail</h1>

   <table class="table">
    <thead>
    <tr>
      <th></th>
      <th></th>
   <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   <tr>
        <td><%= link_to user_path(@user) do %>
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %> <%= @user.name %>
        <% end %>
        </td>
        <td><%= link_to @book.title, book_path %></td>
        <td><%= @book.body %></td>
        <% if @user.id == current_user.id %>
        <td><%= link_to 'Edit', edit_book_path(@book), class: 'btn btn-success' %></td>
        <td><%= link_to 'Destroy', @book, method: :delete, data: {confirm: '本当に消しますか?' },class: 'btn btn-danger' %>
        </td>
        <% end %>
        <% if @book.favorited_by?(current_user) %>
    <td>
    <%= link_to book_favorites_path(@book), method: :delete do %>
    <i class="glyphicon glyphicon-heart" aria-hidden="true" style="color: red;"></i>
    <%= @book.favorites.count %>
    <% end %>
    </td>
<% else %>
    <td>
    <%= link_to book_favorites_path(@book), method: :post do %>
    <i class="glyphicon glyphicon-heart" aria-hidden="true" style="color: gray;"></i>
    <%= @book.favorites.count %>
    <% end %>
<% end %>
     </td>
        <td>コメント数:<%= @book.book_comments.count %></td>
   </tr>
    <% @book.book_comments.each do |book_comment| %>
    <tr>
                    <td>
                        <%= attachment_image_tag @user,:profile_image, :fill, 60, 60, format: 'jpeg',fallback: "no_image.jpg" %>
                    </td>
                <td>
                      <%= book_comment.user.name %></td>
                    <td><%= book_comment.comment %></td>
                    <% unless book_comment.user != current_user %>
    <td><%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-danger pull-right" %></td>
                   <% end %>
    <% end %>
    </tr>
    </tbody>
     </table>
    <%= form_for [@book, @book_comment] do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
            <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
    <%= f.submit "送信", class: "btn btn-default pull-right" %>
      <% end %>
</div>
</div>
</div>
<footer>
    <div class ="bottom">
      <p>CopyRight Infratop.inc</p>
    </div>
  </footer>