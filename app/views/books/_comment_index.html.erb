   <th></th>
      <th colspan="3"></th>
    </tr>
    <% book.book_comments.each do |book_comment| %>
  <tbody>
    <tr>
                    <td>
                        <%= attachment_image_tag book_comment.user,:profile_image, :fill, 60, 60, format: 'jpeg',fallback: "no_image.jpg" %>
                    </td>
                <td>
                      <%= book_comment.user.name %></td>
                    <td><%= book_comment.comment %></td>
                    <% unless book_comment.user != current_user %>
                   <td><%= link_to "削除", book_book_comment_path(book_comment.book_id, book_comment.id), method: :delete,remote: true, class: "btn btn-danger pull-right" %></td>
                   <% end %>
    </tr>
    </tbody>
    <% end %>
</table>