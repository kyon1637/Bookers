  <h1>Books</h1>

   <table>
    <tr>
    <thead>
  <th>Title</th>
   <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_for(@book) do |f| %>
   <h1>New book</h1>

    <%= form.label :Title %> <%= f.text_field :title %>

    <%= form.label :opinion %> <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

<% end %>

