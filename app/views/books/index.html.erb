<div class="profile-container">
  <div class="box1">
<h1>User info</h1>
 <%=  attachment_image_tag current_user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
      <tr>
      <th>name</th>
    <th><%= current_user.name %></th>
      </tr>
      <tr>
    <th>introduction</th>
    <th><%= current_user.introduction %></th>
      </tr>
    </tbody>
  </table>
 <p><%= link_to "プロフィール編集", edit_user_path(current_user), class: "pull-right" %></p>
   <%= form_for(@book) do |f| %>
   <h1>New book</h1>
   <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

<% end %>
</div>
<div class ="profile-index">
<h1>Books</h1>

   <table class="table">
    <thead>
    <tr>
      <th></th>
      <th>Title</th>
   <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
   <tr>
        <td><%=  attachment_image_tag current_user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
<footer>
    <div class ="bottom">
