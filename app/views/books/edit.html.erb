<body>
  <div class="container">
    <div class="row">
<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>

      <h4>Title</h4>
      <%= f.text_field :title, :size=>"83" %>
      <h4>Opinion</h4>
      <%= f.text_area :body, :size=>"82" %>
      <%= f.submit 'Update Book', class: 'btn btn-primary w-90' %>
      <% end %>
      <%= link_to 'Show', book_path(@book) %>
      |
      <%= link_to 'Back', books_path %>
    </div>
  </div>
      <footer>
    <div class ="bottom">
      <p>CopyRight Infratop.inc</p>
    </div>
  </footer>
</body>